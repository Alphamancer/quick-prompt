{
  "name": "quick-prompt",
  "description": "Quick Prompt",
  "private": true,
  "version": "0.0.10",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development wxt",
    "dev:firefox": "cross-env NODE_ENV=development wxt -b firefox",
    "build": "cross-env NODE_ENV=production wxt build",
    "build:firefox": "cross-env NODE_ENV=production wxt build -b firefox",
    "zip": "cross-env NODE_ENV=production wxt zip",
    "zip:firefox": "cross-env NODE_ENV=production wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@tailwindcss/vite": "^4.1.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0",
    "tailwindcss": "^4.1.4"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@wxt-dev/module-react": "^1.1.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "typescript": "^5.8.3",
    "vite-plugin-remove-console": "^2.2.0",
    "wxt": "^0.20.0"
  }
}
